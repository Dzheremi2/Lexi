<?xml version="1.0" encoding="UTF-8"?>
<component type="desktop-application">
  <id>@APP_ID@</id>
  <metadata_license>CC0-1.0</metadata_license>
  <project_license>GPL-3.0-or-later</project_license>

  <name>Lexi</name>
  <summary>Build your own dictionary</summary>
  <description>
    <p>Lexi is a self-driven dictionary app for those who want to make their language learning (or creating) structured and easy</p>
    <p>You can give words:</p>
    <ul>
      <li>Word itself</li>
      <li>Pronunciation</li>
      <li>Multiple translations</li>
      <li>Word types e.g. Noun, Verb, Adjective e.t.c</li>
      <li>Multiple examples</li>
      <li>References to other words</li>
    </ul>
  </description>

  <developer id="com.github">
    <name translate="no">Dzheremi</name>
  </developer>

  <url type="homepage">https://github.com/Dzheremi2/Lexi/</url>
  <url type="vcs-browser">https://github.com/Dzheremi2/Lexi/</url>
