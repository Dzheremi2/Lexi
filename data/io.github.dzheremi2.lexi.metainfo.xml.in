<?xml version="1.0" encoding="UTF-8"?>
<component type="desktop-application">
  <id>@APP_ID@</id>
  <metadata_license>CC0-1.0</metadata_license>
  <project_license>GPL-3.0-or-later</project_license>

  <name>Lexi</name>
  <summary>Build your own dictionary</summary>
  <description>
    <p>Lexi is a self-driven dictionary app for those who want to make their language learning (or creating) structured and easy</p>
    <p>You can give words:</p>
    <ul>
      <li>Word itself</li>
      <li>Pronunciation</li>
      <li>Multiple translations</li>
      <li>Word types e.g. Noun, Verb, Adjective e.t.c</li>
      <li>Multiple examples</li>
      <li>References to other words</li>
    </ul>
  </description>

  <developer id="com.github">
    <name translate="no">Dzheremi</name>
  </developer>

  <url type="homepage">https://github.com/Dzheremi2/Lexi/</url>
  <url type="vcs-browser">https://github.com/Dzheremi2/Lexi/</url>
  <url type="bugtracker">https://github.com/Dzheremi2/Lexi/issues</url>
  <!-- <url type="translate">https://hosted.weblate.org/projects/lrcmake/chronograph/</url> -->
  <url type="help">https://github.com/Dzheremi2/Lexi/discussions</url>
  <url type="contact">https://github.com/Dzheremi2/Lexi/discussions</url>
  <url type="contribute">https://github.com/Dzheremi2/Lexi/pulls</url>

  <translation type="gettext">Lexi</translation>
  <launchable type="desktop-id">@APP_ID@.desktop</launchable>
  <content_rating type="oars-1.1" />

  <branding>
    <color type="primary" scheme_preference="light">#74c69d</color>
    <color type="primary" scheme_preference="dark">#1b4332</color>
  </branding>
  <supports>
    <control>keyboard</control>
    <control>touch</control>
    <control>pointing</control>
  </supports>
  <requires>
