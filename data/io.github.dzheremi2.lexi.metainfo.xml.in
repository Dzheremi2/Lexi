  <url type="contribute">https://github.com/Dzheremi2/Lexi/blob/master/CONTRIBUTING.md</url>

  <translation type="gettext">Lexi</translation>
  <launchable type="desktop-id">@APP_ID@.desktop</launchable>
  <content_rating type="oars-1.1" />

