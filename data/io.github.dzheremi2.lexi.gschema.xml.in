<?xml version="1.0" encoding="UTF-8"?>
<schemalist gettext-domain="Chronograph">
  <schema id="@APP_ID@" path="@PREFIX@/">
    <key name="word-autosave" type="b">
      <default>true</default>
    </key>
  </schema>

  <schema id="@APP_ID@.State" path="@PREFIX@/State/">
    <key name="window-width" type="i">
      <default>700</default>
    </key>
    <key name="window-height" type="i">
      <default>600</default>
    </key>
    <key name="window-maximized" type="b">
      <default>false</default>
    </key>
    <key name="sort-method" type="s">
      <choices>
        <choice value="up" />
        <choice value="down" />
      </choices>
      <default>"up"</default>
    </key>
    <key name="sort-type" type="s">
      <choices>
        <choice value="word" />
        <choice value="first_trnslt" />
        <choice value="by_ref" />
      </choices>
      <default>"word"</default>
    </key>
  </schema>
</schemalist>
